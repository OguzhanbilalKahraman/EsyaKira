@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                        <div class="card">
                            <div class="card-body">

                                <h4 class="card-title">Yeni Eşya Girişi</h4>
                                <p class="card-subtitle mb-4">Eşya ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz. </p>

                                <form method="post">
                                    <div class="form-group">
                                        <label for="exampleInputBrand">Marka</label>
                                        @Html.DropDownListFor(x=>x.BrandID,(List<SelectListItem>)ViewBag.BrandValues, new {@class="form-control"})
                                    
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputModel">Model</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Model girin">
                                    </div>
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Eşyayı Kaydet</button>
                                </form>

                            </div> <!-- end card-body-->
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->



        </div>
        <!-- end page title -->
























